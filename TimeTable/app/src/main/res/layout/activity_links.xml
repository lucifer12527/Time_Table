<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_links"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"

    android:background="@color/white"
    tools:context="com.example.abhinavbollam.timetable.links">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center">
  <LinearLayout
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sunset"
        android:id="@+id/webmail"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:clickable="true"
        android:background="@color/white"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="webmail"
      android:gravity="center"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/facebook"
          android:id="@+id/facebook"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          android:clickable="true"
          android:background="@color/white"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="facebook"
          android:gravity="center"/>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/faculty"
          android:id="@+id/facultyimage"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          android:clickable="true"
          android:background="@color/white"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="faculty"
          android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/book"
          android:id="@+id/books"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          android:clickable="true"
          android:background="@color/white"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="phonemode"
          android:gravity="center"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
